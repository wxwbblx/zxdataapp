<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="40dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="QQ"
                android:textSize="40sp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_hint_user"
                android:id="@id/login_user"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_hint_pwd"
                android:id="@id/login_pwd"/>

        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_chxpwd"
                android:text="@string/login_checkpwd"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/login_but"
                android:text="@string/loginName"
                android:onClick="loginOnClick"
        />





    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfasdfasdfasdf"
            android:layout_centerHorizontal="true"
            android:id="@+id/timeTextView"/>

    <!--<Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/loginName"
            android:onClick="showTime"
            android:layout_marginBottom="33dp" />-->

</RelativeLayout>